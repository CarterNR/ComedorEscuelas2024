@model FrontEnd.Models.EstudianteViewModel

@{
    ViewData["Title"] = "Delete";
}


<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"]</title>

    <link rel="shortcut icon" href="/images/favicon.ico" />
    <link rel="stylesheet" href="/css/backend-plugin.min.css">
    <link rel="stylesheet" href="/css/backend.css?v=1.0.0">
    <link rel="stylesheet" href="/vendor/fortawesome/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="/vendor/line-awesome/dist/line-awesome/css/line-awesome.min.css">
    <link rel="stylesheet" href="/vendor/remixicon/fonts/remixicon.css">
</head>

<body>

    <div class="content-page">
        <div class="container-fluid add-form-list">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between">
                            <div class="header-title d-flex align-items-center">
                                <a asp-action="Listado" class="btn btn-info mr-2">
                                    <i class="fas fa-arrow-left"></i>
                                </a>
                                <h4 class="card-title mb-0">Detalles del estudiante</h4>
                            </div>
                        </div>

                        <h1>Delete</h1>

                        <h3>Are you sure you want to delete this?</h3>
                        <div>
                            <h4>EstudianteViewModel</h4>
                            <hr />
                            <dl class="row">
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.IdEstudiante)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.IdEstudiante)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Nombre)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Nombre)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Cedula)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Cedula)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.IdEscuela)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.IdEscuela)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.TiquetesRestantes)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.TiquetesRestantes)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.IdUsuario)
                                </dt>

                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.NombreUsuario)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.NombreUsuario)
                                </dd>

                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.FechaUltimoRebajo)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.FechaUltimoRebajo)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.NombreEscuela)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.NombreEscuela)
                                </dd>
                            </dl>


                            <form asp-action="Delete" method="post" asp-route-id="@Model.IdEstudiante" asp-route-idUsuario="@Model.IdUsuario">
                                <input type="submit" value="Eliminar" class="btn btn-danger" />
                            </form>

                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/backend-bundle.min.js"></script>
    <script src="/js/app.js"></script>
</body>
</html>