                                                <div class="d-flex align-items-center justify-content-center mt-3">
                                                    @* Mostrar botón de registro solo si es Admin (rol 1) *@
                                                    @if (idRol == 1)
                                                    {
                                                        <a asp-controller="Register" asp-action="Register" class="btn border mr-2">Registrar</a>
                                                    }

                                                    @if (autenticado)
                                                    {
                                                        <a asp-controller="Login" asp-action="Logout" class="btn border">Cerrar Sesión</a>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
