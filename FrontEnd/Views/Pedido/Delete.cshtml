@model FrontEnd.Models.PedidoViewModel

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"]</title>

    <link rel="shortcut icon" href="/images/favicon.ico" />
    <link rel="stylesheet" href="/css/backend-plugin.min.css">
    <link rel="stylesheet" href="/css/backend.css?v=1.0.0">
    <link rel="stylesheet" href="/vendor/fortawesome/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="/vendor/line-awesome/dist/line-awesome/css/line-awesome.min.css">
    <link rel="stylesheet" href="/vendor/remixicon/fonts/remixicon.css">
</head>


<body>

    <div class="content-page">
        <div class="container-fluid add-form-list">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between">

                            <div class="header-title d-flex align-items-center">
                                <a asp-action="Index" class="btn btn-info mr-2">
                                    <i class="fas fa-arrow-left"></i>
                                </a>
                                <h4 class="card-title mb-0">¿Eliminar pedido?</h4>
                            </div>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class = "col-sm-2">
                                    <label>ID Pedido</label>
                                </dt>
                                <dd class = "col-sm-10">
                                    @Html.DisplayFor(model => model.IdPedido)
                                </dd>
                                <dt class = "col-sm-2">
                                    <label>ID Producto</label>
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.NombreProducto)
                                </dd>
                                <dt class = "col-sm-2">
                                    <label>Fecha y Hora de Ingreso</label>
                                </dt>
                                <dd class = "col-sm-10">
                                    @Html.DisplayFor(model => model.FechaHoraIngreso)
                                </dd>
                                <dt class = "col-sm-2">
                                    <label>Cantidad</label>
                                </dt>
                                <dd class = "col-sm-10">
                                    @Html.DisplayFor(model => model.Cantidad)
                                </dd>
                                <dt class = "col-sm-2">
                                    <label>Usuario</label>
                                </dt>
                                <dd class = "col-sm-10">
                                    @Html.DisplayFor(model => model.NombreCompleto)
                                </dd>
                                <dt class = "col-sm-2">
                                    <label>Escuela</label>
                                </dt>
                                <dd class = "col-sm-10">
                                    @Html.DisplayFor(model => model.NombreEscuela)
                                </dd>
                                <dt class = "col-sm-2">
                                    <label>Estado Pedido</label>
                                </dt>
                                <dd class = "col-sm-10">
                                    @Html.DisplayFor(model => model.EstadoPedido1)
                                </dd>
                                <dt class = "col-sm-2">
                                    <label>Estado</label>
                                </dt>
                                <dd class = "col-sm-10">
                                    @Html.DisplayFor(model => model.Estado)
                                </dd>
                            </dl>
    
                            <form asp-action="DeleteConfirmed">
                                @Html.HiddenFor(Model => Model.IdPedido)
                                <input type="submit" value="Delete" class="btn btn-danger" /> 
                           
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/backend-bundle.min.js"></script>
    <script src="/js/app.js"></script>
</body>
</html>
