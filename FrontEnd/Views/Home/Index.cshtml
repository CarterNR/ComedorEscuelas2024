

@model List<ProductoViewModel>

@{
    var rol = Context.Session.GetInt32("IdRol");
}

<style>
    .border-3 {
        border-width: 3px !important;
    }
</style>

<div class="container-fluid">
    <div class="row justify-content-center mt-4">
        <div class="col-12 text-center">
            <br><br><h2 style="color: #32BDEA; font-weight: bold;">¡Bienvenido al comedor!</h2><br><br>
        </div>
    </div>

    <div class="row justify-content-center mt-4">

        @if (rol == 1)
        {
            <div class="row justify-content-center">

                <div class="col-lg-3 col-md-4 col-sm-6 mb-3">
                    <div class="card text-center border-3 border-info shadow-sm" style="height: 180px; cursor: pointer;" onclick="location.href='/ProductoDia/Index'">
                        <div class="card-body d-flex flex-column justify-content-center align-items-center p-2">
                            <img src="../images/productosdia.png" alt="Productos del día" style="width: 60px; height: 60px;" class="mb-2">
                            <p class="mb-0 fw-bold">Productos del día</p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-4 col-sm-6 mb-3">
                    <div class="card text-center border-3 border-danger shadow-sm" style="height: 180px; cursor: pointer;" onclick="location.href='/Producto/Index'">
                        <div class="card-body d-flex flex-column justify-content-center align-items-center p-2">
                            <img src="../images/productos.png" alt="Productos" style="width: 60px; height: 60px;" class="mb-2">
                            <p class="mb-0 fw-bold">Productos</p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-4 col-sm-6 mb-3">
                    <div class="card text-center border-3 border-success shadow-sm" style="height: 180px; cursor: pointer;" onclick="location.href='/Pedido/Index'">
                        <div class="card-body d-flex flex-column justify-content-center align-items-center p-2">
                            <img src="../images/pedidos.png" alt="Pedidos" style="width: 60px; height: 60px;" class="mb-2">
                            <p class="mb-0 fw-bold">Pedidos</p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-4 col-sm-6 mb-3">
                    <div class="card text-center border-3 border-warning shadow-sm" style="height: 180px; cursor: pointer;" onclick="location.href='/Proveedor/Index'">
                        <div class="card-body d-flex flex-column justify-content-center align-items-center p-2">
                            <img src="../images/proveedor.jpeg" alt="Proveedores" style="width: 60px; height: 60px;" class="mb-2">
                            <p class="mb-0 fw-bold">Proveedores</p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-4 col-sm-6 mb-3">
                    <div class="card text-center border-3 border-warning shadow-sm" style="height: 180px; cursor: pointer;" onclick="location.href='/Usuario/Index'">
                        <div class="card-body d-flex flex-column justify-content-center align-items-center p-2">
                            <img src="../images/usuarios.png" alt="Usuarios" style="width: 60px; height: 60px;" class="mb-2">
                            <p class="mb-0 fw-bold">Usuarios</p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3 col-md-4 col-sm-6 mb-3">
                    <div class="card text-center border-3 border-info shadow-sm" style="height: 180px; cursor: pointer;" onclick="location.href='/Estudiante/Listado'">
                        <div class="card-body d-flex flex-column justify-content-center align-items-center p-2">
                            <img src="../images/estudiante.png" alt="Estudiantes" style="width: 60px; height: 60px;" class="mb-2">
                            <p class="mb-0 fw-bold">Estudiantes</p>
                        </div>
                    </div>
                </div>

            </div>
        }
    

        @if (rol == 2)
        {

            <div class="row justify-content-center">

                <div class="col-lg-4 col-md-6 col-sm-6 mb-3">
                    <div class="card text-center border-3 border-info shadow-sm" style="height: 180px; cursor: pointer;" onclick="location.href='/ProductoDia/Index'">
                        <div class="card-body d-flex flex-column justify-content-center align-items-center p-2">
                            <img src="../images/productosdia.png" alt="Productos del día" style="width: 60px; height: 60px;" class="mb-2">
                            <p class="mb-0 fw-bold">Productos del día</p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6 col-sm-6 mb-3">
                    <div class="card text-center border-3 border-danger shadow-sm" style="height: 180px; cursor: pointer;" onclick="location.href='/Producto/Index'">
                        <div class="card-body d-flex flex-column justify-content-center align-items-center p-2">
                            <img src="../images/productos.png" alt="Productos" style="width: 60px; height: 60px;" class="mb-2">
                            <p class="mb-0 fw-bold">Productos</p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6 col-sm-6 mb-3">
                    <div class="card text-center border-3 border-success shadow-sm" style="height: 180px; cursor: pointer;" onclick="location.href='/Pedido/Index'">
                        <div class="card-body d-flex flex-column justify-content-center align-items-center p-2">
                            <img src="../images/pedidos.png" alt="Pedidos" style="width: 60px; height: 60px;" class="mb-2">
                            <p class="mb-0 fw-bold">Pedidos</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header text-center bg-info-light">
                        <h4 class="mb-0">Productos</h4>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled row justify-content-center">


                            @foreach (var producto in Model)
                            {
                                <li class="col-lg-2 col-md-3 col-sm-4 col-6 mb-2">
                                    <div class="card text-center shadow" style="height: 180px;">
                                        <div class="card-body p-2 d-flex flex-column justify-content-center align-items-center">
                                            @if (producto.Imagen != null)
                                            {
                                                <img src="data:image/jpeg;base64,@Convert.ToBase64String(producto.Imagen)"
                                                     alt="@producto.NombreProducto" style="width: 60px; height: 60px;" />
                                            }
                                            else
                                            {
                                                <img src="../assets/images/product/default.png"
                                                     alt="default-image" style="width: 60px; height: 60px;" />
                                            }
                                            <h6 class="mt-2 mb-1 text-truncate" style="font-size: 0.85rem;">@producto.NombreProducto</h6>
                                            <p class="mb-0" style="font-size: 0.8rem;">@producto.Cantidad</p>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

